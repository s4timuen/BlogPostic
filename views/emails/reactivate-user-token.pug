extends base-email

block content 
    p Hi #{fullName},
    p You want to reactivate your user account? Send a GET request to: #{url}. 
    table.btn.btn-primary(role='presentation', border='0', cellpadding='0', cellspacing='0')
        tbody
            tr
                td(align='left')
                    table(role='presentation', border='0', cellpadding='0', cellspacing='0')
                        tbody
                            tr
                                td
                                    a(href=`${url}`, target='_blank') Reactivate your user account
    p If you did not want to reactivate your user account, please ignore this email.
