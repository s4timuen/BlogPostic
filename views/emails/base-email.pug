//- Email template adapted from https://github.com/leemunroe/responsive-html-email-template

doctype html
html
    head
        meta(name='viewport', content='width=device-width')
        meta(http-equiv='Content-Type', content='text/html; charset=UTF-8')
        style 
            include email-styles.css
        title= subject

    body
        table.body(role='presentation', border='0', cellpadding='0', cellspacing='0')
            tbody
                tr
                    td
                    td.container
                        .content
                            // START CENTERED WHITE CONTAINER
                            table.main(role='presentation')

                                // START MAIN AREA
                                tbody
                                    tr
                                        td.wrapper
                                            table(role='presentation', border='0', cellpadding='0', cellspacing='0')
                                                tbody
                                                    tr
                                                        td
                                                            // CONTENT
                                                            block content

                            // START FOOTER
                            .footer
                                table(role='presentation', border='0', cellpadding='0', cellspacing='0')
                                    tbody
                                        tr
                                            td.content-block
                                                span.apple-link BlogPostic, Some Road, Some City
                                                br
                                                |   #{i18n.MAIL_FOOTER_UNSUBSCRIBE_TEXT}
                                                //- TODO: implement unsubscribe endpoint
                                                a(href='#') #{i18n.MAIL_FOOTER_UNSUBSCRIBE_LINK}
